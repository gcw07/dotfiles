# Laravel
alias art=artisan
alias fresh="art migrate:fresh --seed"
alias migrate="art migrate"
alias playbook="art playbook:run"
alias seed="art db:seed"
alias serve="art serve"
alias tinker="art tinker"

# PHP Testing
alias pest="vendor/bin/pest"
alias phpunit="vendor/bin/phpunit"
alias pp="art test --parallel"

# PHP
alias cfresh="rm -rf vendor/ composer.lock && composer i"
alias larastan="vendor/bin/phpstan analyse"
alias pint="vendor/bin/pint"
alias composer="herd composer"
alias php="herd php"

# Javascript
alias nfresh="rm -rf node_modules/ package-lock.json && npm install"
alias mix="npm run dev"
alias mw="npm run watch"
alias watch="npm run watch"

#  Shortcuts
alias copykey="pbcopy < $HOME/.ssh/id_ed25519.pub"
alias hostfile="nano /etc/hosts"
alias phpstorm='open -a /Applications/Development/PhpStorm.app "`pwd`"'
alias reloadshell="omz reload"
alias reloaddns="dscacheutil -flushcache && sudo killall -HUP mDNSResponder"
alias sshconfig="nano $HOME/.ssh/config"
alias zshconfig="nano $HOME/.zshrc"

# List all files colorized in long format
alias l="ls -laF"

# Redis
alias flush-redis="redis-cli FLUSHALL"

# Directories
alias code="cd $HOME/Code"
alias dotfiles="cd $DOTFILES"
alias desktop="cd $HOME/Desktop"
alias library="cd $HOME/Library"
